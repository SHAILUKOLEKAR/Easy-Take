<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AdminSettingsActivity"
 android:background="@drawable/food3">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/admin_stng_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/setting_admin_profile_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/hotel"
                app:civ_border_color="@android:color/holo_red_dark"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/profile_image_change_btn"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/orange_button_backgrnd"
                android:gravity="center_horizontal"
                android:text="@string/change_profile"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/setting_change_owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="20dp"
                android:hint="@string/owner_name"
                android:inputType="textCapCharacters"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/setting_change_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/hotel_name"
                android:inputType="textCapCharacters"
                android:textColorHint="@android:color/black" />
            <EditText
                android:id="@+id/setting_change_taable_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/admin_table_no"
                android:inputType="numberDecimal"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/setting_change_village"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/village"
                android:inputType="textCapCharacters"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/setting_admin_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/pass"
                android:inputType="numberPassword"
                android:textColorHint="@android:color/black" />

            <EditText
                android:id="@+id/setting_change_payment_mono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:hint="@string/admin_upi_payment"
                android:textColorHint="@android:color/black" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>