<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="35dp"
    android:layout_marginStart="35dp"
    app:cardElevation="18dp"
    app:cardCornerRadius="15dp"
    app:cardBackgroundColor="@color/colorAccent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ss"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:civ_border_width="3dp"
            android:src="@drawable/hotel"
            app:civ_border_color="@android:color/holo_red_dark"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/list_hotel_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@android:color/holo_red_dark"
            android:src="@drawable/hotel"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/list_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/ss"
            android:text="@string/hotel_name"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/ss" />

        <TextView
            android:id="@+id/list_village_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_hotel_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/ss"
            android:text="@string/village"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ss"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>